{
  "name": "rideshare-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Privacy-preserving decentralized rideshare platform",
  "scripts": {
    "dev": "next dev -p 1311",
    "build": "next build",
    "start": "next start -p 1311",
    "lint": "next lint",
    "lint:solidity": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,css,md,sol}'",
    "format:check": "prettier --check '**/*.{ts,tsx,js,jsx,json,css,md,sol}'",
    "type-check": "tsc --noEmit",
    "frontend": "next dev -p 1311",
    "test": "hardhat test",
    "test:sepolia": "hardhat test --network sepolia",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "ci": "npm run lint && npm run lint:solidity && npm run type-check && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@rainbow-me/rainbowkit": "^2.2.9",
    "@tanstack/react-query": "^5.90.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "next": "^14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "viem": "^2.38.3",
    "wagmi": "^2.18.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.1",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "chai": "^6.2.0",
    "chai-as-promised": "^8.0.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^14.2.0",
    "ethers": "^6.15.0",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-deploy": "^1.0.4",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mocha": "^11.7.4",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "solhint": "^6.0.1",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.16",
    "tailwindcss": "^3.4.0",
    "typechain": "^8.3.2",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module"
}
